<table>
  <tr>
    <td><label for="preg" class="rem">Pregunta:</label></td>
    <td><input type="text" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>"/></td>
  </tr>
  <tr>
    <td><label for="resp" class="rem">Respuesta:</label></td>
    <td><input type="text" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>"/></td>
  </tr>
  <tr>
    <td><label for="tem" class="tem">Temática:</label></td>
    <td>
      <select id ="selectTema" form ="datos" name=tema onChange="cambiarTema()">
       <option value="otro" <%if (quiz.tema == "otro") { %> selected <%}%> >Otro</option>
       <option value="humanidades" <%if (quiz.tema == "humanidades") { %> selected <%}%> >Humanidades</option>
       <option value="ocio" <%if (quiz.tema == "ocio") { %> selected <%}%> >Ocio</option>
       <option value="ciencia" <%if (quiz.tema == "ciencia") { %> selected <%}%> >Ciencia</option>
       <option value="tecnologia" <%if (quiz.tema == "tecnologia") { %> selected <%}%> >Tecnología</option>
      </select>
    </td>
  </tr>
</table>
<input type="hidden" id="hiddentem" name="quiz[tema]" value="<%= quiz.tema %>"/>
<a href="/quizes"><button type="button">Cancelar</button></a>
<input type="submit" value="Salvar">

<script>
function cambiarTema()
{
  var seleccion=document.getElementById('selectTema');
  document.getElementById('hiddentem').value=seleccion.options[seleccion.selectedIndex].value;
}
</script>
